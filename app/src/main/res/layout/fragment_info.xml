<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".info.InfoFragment">

    // 한복에 대한 모든 것

    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="20dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/info_star_icon" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_extra_bold"
                android:text="한복에 대한 모든 것"
                android:textColor="#f2893e"
                android:textSize="14sp" />
    </LinearLayout>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            <ImageView
                    android:id="@+id/btn_info_img1"
                    android:layout_width="328dp"
                    android:layout_height="218dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/infotb_3" />

            <ImageView
                    android:id="@+id/btn_info_img2"
                    android:layout_width="328dp"
                    android:layout_height="218dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/infotb_2" />

            <ImageView
                    android:id="@+id/btn_info_img3"
                    android:layout_width="328dp"
                    android:layout_height="218dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/infotb_1" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>