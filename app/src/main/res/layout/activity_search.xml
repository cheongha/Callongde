<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".search.SearchActivity">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center">
        <ImageView
                android:id="@+id/btn_search_back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/search_back_icon"/>
        <RelativeLayout
                android:layout_marginHorizontal="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/search_orange_border"
                android:layout_width="242dp"
                android:layout_height="26dp">
            <ImageView
                    android:id="@+id/icon_magnet"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/search_magnifier_icon"
            />
            <EditText
                    android:id="@+id/txt_search_word"
                    android:hint="한복 상품, 매장, 장소로 검색"
                    android:textColorHint="#c8c8c8"
                    android:textSize="14sp"
                    android:textColor="#494949"
                    android:background="@android:color/transparent"
                    android:layout_toRightOf="@id/icon_magnet"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/btn_search_search"
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:background="@drawable/filter_inhanbok_border_white"
                android:gravity="center">
            <TextView
                    android:text="검색"
                    android:textSize="14sp"
                    android:textColor="#ffffff"
                    android:layout_marginVertical="4dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eb5f4c"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
        <RelativeLayout
                android:id="@+id/search_outcome"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:visibility="invisible"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="8dp">
            <android.support.v7.widget.RecyclerView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/rv_search_overview_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView
                android:id="@+id/search_hanbok"
                android:text="원하는 한복을 찾아보세요."
                android:textColor="#c8c8c8"
                android:textSize="14sp"
                android:visibility="visible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="112dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <TextView
                android:id="@+id/search_no_outcome"
                android:text="검색 결과가 없습니다."
                android:textColor="#c8c8c8"
                android:textSize="14sp"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="112dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
    </RelativeLayout>


</LinearLayout>