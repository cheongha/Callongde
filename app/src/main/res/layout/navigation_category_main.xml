<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_bottom_color"
        android:orientation="vertical">

    <View android:layout_width="match_parent"
          android:layout_height="2dp"
          android:background="@drawable/tabbar_shadow"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#f4f2f2"
            android:elevation="4dp"
            android:orientation="horizontal"
    >
        <RelativeLayout
                android:id="@+id/rl_category_main_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true">
                <ImageView
                        android:id="@+id/iv_home"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/main_tb_bottom_home_off_icon"/>
                <TextView
                        android:id="@+id/tv_home"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="홈"
                        android:textSize="8sp"
                        android:textColor="#828384"
                        android:fontFamily="@font/nanum_square_bold"
                        android:layout_marginTop="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_category_main_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true">

                <ImageView
                        android:id="@+id/iv_filter"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/main_tb_bottom_filter_off_icon"/>
                <TextView
                        android:id="@+id/tv_filter"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="필터"
                        android:textSize="8sp"
                        android:textColor="#828384"
                        android:fontFamily="@font/nanum_square_bold"
                        android:layout_marginTop="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_category_main_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true">

                <ImageView
                        android:id="@+id/iv_info"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/main_tb_bottom_info_off_icon"/>
                <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="정보"
                        android:textSize="8sp"
                        android:textColor="#828384"
                        android:fontFamily="@font/nanum_square_bold"
                        android:layout_marginTop="2dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_category_main_mypage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
        >
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_centerInParent="true">
                <ImageView
                        android:id="@+id/iv_etc"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/main_tb_bottom_etc_off_icon"/>
                <TextView
                        android:id="@+id/tv_mypage"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="기타"
                        android:textSize="8sp"
                        android:textColor="#828384"
                        android:fontFamily="@font/nanum_square_bold"
                        android:layout_marginTop="4dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>