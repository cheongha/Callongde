<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cardCornerRadius="15dp"
        tools:context=".main.PopupDialog">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/contact_dialog_border">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/home_dialog_img"/>
        <TextView
                android:text="원하는 한복을 찾아보세요."
                android:textSize="14sp"
                android:textColor="#eb5f4c"
                android:fontFamily="@font/nanum_square_extra_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="62dp"/>
        <TextView
                android:text="간단한 4단계 선택으로 원하는 한복을 추천받으실 수 있습니다."
                android:textSize="12sp"
                android:textColor="#494949"
                android:fontFamily="@font/nanum_square_regular"
                android:lineHeight="18sp"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="36dp"
                android:gravity="center"
                android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="28dp"
                android:layout_marginBottom="12dp">
            <RelativeLayout
                    android:id="@+id/btn_popup_dialog_yes"
                    android:layout_width="108dp"
                    android:layout_height="32dp"
                    android:background="@drawable/popup_dialog_btn_background"
                    android:gravity="center"
                    android:layout_marginRight="8dp">
                <TextView
                        android:text="좋아요"
                        android:textSize="14sp"
                        android:textColor="#eb5f4c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/btn_popup_dialog_no"
                    android:layout_width="108dp"
                    android:layout_height="32dp"
                    android:background="@drawable/popup_dialog_btn_background"
                    android:gravity="center">
                <TextView
                        android:text="나중에요"
                        android:textSize="14sp"
                        android:textColor="#d8d8d8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>