<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".choose.ChooseActivity">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_choose_contact">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            // 이미지 이미지 슬라이드
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="360dp">
                // 이미지 슬라이드 넣어야 함.
                <android.support.v4.view.ViewPager
                        android:id="@+id/vp_choose_img_slider"
                        android:layout_width="match_parent"
                        android:layout_height="360dp">
                </android.support.v4.view.ViewPager>
                <android.support.design.widget.TabLayout
                        android:id="@+id/tl_choose_indicator"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="15dp"
                        app:tabIndicatorHeight="0dp"
                        app:tabBackground="@drawable/choose_dot_selector">
                </android.support.design.widget.TabLayout>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp">
                // 첫 번째 단
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">
                    <TextView
                            android:id="@+id/txt_choose_hanbok_name"
                            android:text="한복이름한복이름한복이름한복이름한복이름한복"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <ImageView
                            android:id="@+id/img_choose_like_sharon"
                            android:layout_width="26dp"
                            android:layout_height="24dp"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/filter_sharon_grey_icon"/>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginTop="6dp"
                            android:layout_below="@id/txt_choose_hanbok_name">
                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/img_choose_market"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/market_id_off_icon"/>
                        <TextView
                                android:id="@+id/txt_choose_market_name"
                                android:text="마켓 이름"
                                android:textSize="14sp"
                                android:textColor="#494949"
                                android:fontFamily="@font/nanum_square_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"/>
                    </LinearLayout>
                    <LinearLayout

                            android:id="@+id/ll_sale_and_origin_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:layout_marginTop="48dp"
                            android:layout_marginBottom="4dp">
                        <TextView
                                android:id="@+id/txt_choose_sale"
                                android:text="20"
                                android:textSize="12sp"
                                android:textColor="#d60050"
                                android:fontFamily="@font/nanum_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="6dp"/>
                        <TextView
                                android:id="@+id/txt_choose_origin_price"
                                android:text="40,000"
                                android:textSize="10sp"
                                android:textColor="#c8c8c8"
                                android:fontFamily="@font/nanum_square_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/ll_time_and_rent_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/ll_sale_and_origin_price">
                        <TextView
                                android:id="@+id/txt_choose_rent_time"
                                android:text="24"
                                android:textSize="14sp"
                                android:textColor="#494949"
                                android:fontFamily="@font/nanum_square_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="6dp"/>
                        <TextView
                                android:id="@+id/txt_choose_rent_price"
                                android:text="22,000"
                                android:textSize="18sp"
                                android:textColor="#494949"
                                android:fontFamily="@font/nanum_square_extra_bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/txt_choose_rent_time"
                                android:layout_gravity="bottom"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8"/>
                // 두 번째 단
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginVertical="10dp">
                    <TextView
                            android:text="상품 수령"
                            android:textSize="12sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txt_choose_get_item"
                            android:text="무료배송/매장 방문 (구체적인 사항은 문의바람)"
                            android:textSize="12sp"
                            android:textColor="#0091ff"
                            android:fontFamily="@font/nanum_square_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8"/>
                // 세 번째 단 - 태그 리싸이클러 뷰 구현해야됨!
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="키워드"
                            android:textSize="12sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="12dp"/>
                    <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_choose_keyword_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="-3dp">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#c8c8c8"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="상품 설명"
                        android:textSize="14sp"
                        android:textColor="#eb5e4d"
                        android:fontFamily="@font/nanum_square_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="10dp"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8"
                        android:layout_marginBottom="20dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp">
                    <TextView
                            android:id="@+id/txt_choose_item_explain"
                            android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ드디어 여러분들이 기다리시던\n예다움 한복만의 자랑!!!
특별한 디자인!!!\n존예보스 퓨전한복 신상이 출시되었습니다!!!!!\n\n\n이미 무수히 많은 존예디자인들이 있지만~!!\n여기서 만족할수 없다!!!\n고객님들의 사랑과 성원에 보답하고자~\n\n\n완전 이쁜것만 모아모아 왔으니!!\n한복남의 퓨전한복!!\n놓치지 마시고 바로바로 픽! 해주세요~\n\n\n배송료는 예다움 한복이 쏩니다!!\n무.료.배.송♥\n\n\n이렇게 예쁜 한복 이 가격에 찾기 어려우시다구용!!\n바로 바로 Get Get!!!"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"/>
                    <TextView
                            android:text="사이즈 상세표"
                            android:textSize="14sp"
                            android:textColor="#eb5e4d"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginVertical="10dp"/>
                    <TextView
                            android:id="@+id/txt_choose_size_table"
                            android:text="아동 치마 + 저고리 + 머리띠(서비스)"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"/>
                    <TextView
                            android:text="매장 위치"
                            android:textSize="14sp"
                            android:textColor="#eb5e4d"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginVertical="10dp"/>
                    <TextView
                            android:id="@+id/txt_choose_market_address"
                            android:text="배송료는 예다움 한복이 쏩니다!!"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    // 문의하기
    <Button
            android:id="@+id/btn_choose_contact"
            android:text="문의하기"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/nanum_square_extra_bold"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/background_color"
            android:layout_alignParentBottom="true"/>
</RelativeLayout>