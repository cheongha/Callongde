<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center">
    <ImageView
            android:id="@+id/img_nav_indicator_info_1"
            android:background="@drawable/orange_circle_border"
            android:layout_height="6dp"
            android:layout_width="6dp"
            android:layout_marginHorizontal="2dp">
    </ImageView>
    <ImageView
            android:id="@+id/img_nav_indicator_info_2"
            android:background="@drawable/white_circle_border"
            android:layout_height="6dp"
            android:layout_width="6dp"
            android:layout_marginHorizontal="2dp">
    </ImageView>
    <ImageView
            android:id="@+id/img_nav_indicator_info_3"
            android:background="@drawable/white_circle_border"
            android:layout_height="6dp"
            android:layout_width="6dp"
            android:layout_marginHorizontal="2dp">
    </ImageView>

</LinearLayout>