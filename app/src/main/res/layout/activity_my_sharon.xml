<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        tools:context=".mysharon.MySharonActivity">
    <RelativeLayout
            android:id="@+id/mysharon_tabbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/btn_mysharon_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/x"/>
        <TextView
                android:text="내 무궁화"
                android:textSize="16sp"
                android:textColor="#eb5f4c"
                android:fontFamily="@font/nanum_square_extra_bold"
                android:layout_marginVertical="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"/>
    </RelativeLayout>
    <View
            android:id="@+id/filter_tabbar_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eb5f4c"
            android:layout_below="@+id/filter_tabbar"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ededed"
            android:paddingHorizontal="8dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">
            <ImageView
                    android:id="@+id/mysharon_grey_icon"
                    android:layout_width="97dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="110dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/filter_sharon_grey_icon"/>
            <TextView
                    android:text="선택한 무궁화가 없습니다. "
                    android:textSize="14sp"
                    android:textColor="#c8c8c8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/mysharon_grey_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_mysharon_overview_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

</LinearLayout>