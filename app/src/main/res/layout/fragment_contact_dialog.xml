<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
    <android.support.v7.widget.CardView
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:cardCornerRadius="15dp"
            tools:context=".choose.ContactDialog">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/contact_dialog_border">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="143dp"
                    android:background="@drawable/background_color">
                <ImageView
                        android:id="@+id/btn_contact_back"
                        android:src="@drawable/marketinfo_top_x_icon"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_contact_market"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/market_id_off_icon"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_toRightOf="@id/img_contact_market">
                    <TextView
                            android:id="@+id/txt_contact_market_name"
                            android:text="한복 가게 이름"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:fontFamily="@font/nanum_square_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"/>
                    <TextView
                            android:id="@+id/txt_contact_hanbok_name"
                            android:text="한복 이름"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:fontFamily="@font/nanum_square_extra_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="20dp"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/marketinfo_home_icon"/>
                    <TextView
                            android:text="위치"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="4dp"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txt_contact_place"
                            android:text="주소"
                            android:textSize="14sp"
                            android:textColor="#0091ff"
                            android:fontFamily="@font/nanum_square_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8"
                        android:layout_marginVertical="12dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/marketinfo_clock_icon"/>
                    <TextView
                            android:text="운영 시간"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txt_contact_opening"
                            android:text="0:00 - 00:00"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8"
                        android:layout_marginVertical="12dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/marketinfo_website_icon"/>
                    <TextView
                            android:text="웹사이트"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txt_contact_website"
                            android:text="www.oooooo.com"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"/>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8"
                        android:layout_marginVertical="12dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/marketinfo_call_icon"/>
                    <TextView
                            android:text="연락처"
                            android:textSize="14sp"
                            android:textColor="#494949"
                            android:fontFamily="@font/nanum_square_bold"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">
                        <TextView
                                android:id="@+id/txt_contact_market_number"
                                android:text="00-000-0000"
                                android:textSize="14sp"
                                android:textColor="#494949"
                                android:fontFamily="@font/nanum_square_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"/>
                        <ImageView
                                android:id="@+id/btn_contact_kakao"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="6dp"
                                android:visibility="gone"
                                android:src="@drawable/marketinfo_kakao_icon"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#c8c8c8"
                        android:layout_marginVertical="12dp"/>
                <TextView
                        android:id="@+id/txt_contact_sentence"
                        android:text="항상 정성을 다해 모십니다.\n언제든 편하게 연락주세요. ^^"
                        android:textSize="14sp"
                        android:textColor="#494949"
                        android:fontFamily="@font/nanum_square_regular"
                        android:lineHeight="22sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>