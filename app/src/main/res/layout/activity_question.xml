<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed"
        android:orientation="vertical"
        tools:context=".notice.NoticeActivity">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            android:background="@drawable/background_color">
        <ImageView
                android:id="@+id/btn_question_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/notice_top_x_icon"
                />
        <TextView
                android:text="자주묻는 질문"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:fontFamily="@font/nanum_square_extra_bold"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <TextView
            android:text="구매 및 결제"
            android:textSize="16sp"
            android:textColor="#494949"
            android:fontFamily="@font/nanum_square_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="16dp"/>
    <RelativeLayout
            android:id="@+id/rl_question_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff">
        <TextView
                android:text="대여 및 결제는 판매자와 직접 진행하는 건가요?"
                android:textColor="#494949"
                android:textSize="14sp"
                android:fontFamily="@font/nanum_square_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/question_answer_selector"
                android:id="@+id/btn_question_under1"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rl_question_answer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:background="#ffffff">
        <TextView
                android:text="네, 그렇습니다. 깔롱드는 상품에 직접 관여하지 않으며 상품 주문, 배송 및 환불의 의무와 책임은 각 판매업체에 있습니다."
                android:textColor="#494949"
                android:textSize="14sp"
                android:fontFamily="@font/nanum_square_regular"
                android:lineHeight="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_question_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff">
        <TextView
                android:text="교환 및 환불은 어떻게 진행하나요?"
                android:textColor="#494949"
                android:textSize="14sp"
                android:fontFamily="@font/nanum_square_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/question_answer_selector"
                android:id="@+id/btn_question_under2"/>
    </RelativeLayout>
    <TextView
            android:text="신청"
            android:textSize="16sp"
            android:textColor="#494949"
            android:fontFamily="@font/nanum_square_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginHorizontal="16dp"/>
    <RelativeLayout
            android:id="@+id/rl_question_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:layout_marginBottom="2dp"
            android:background="#ffffff">
        <TextView
                android:text="상품을 올리고 싶습니다. 어떻게 신청하나요?"
                android:textColor="#494949"
                android:textSize="14sp"
                android:fontFamily="@font/nanum_square_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/question_answer_selector"
                android:id="@+id/btn_question_under3"/>
    </RelativeLayout>
</LinearLayout>