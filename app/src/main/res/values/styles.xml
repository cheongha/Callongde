<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">#ea5753</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/background_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="WhiteAppTheme" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/white</item>
    </style>
    <style name="FullAppTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="nanum_extra_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_extra_bold</item>
    </style>
    <style name="nanum_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_bold</item>
    </style>
    <style name="nanum_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_regular</item>
    </style>
    <style name="nanum_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_square_light</item>
    </style>
    <style name="nanum_gothic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_gothic_light</item>
    </style>
    <style name="nanum_gothic_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
    </style>
    <style name="nanum_gothic_bold_extra">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nanum_gothic_extra_bold</item>
    </style>
</resources>
